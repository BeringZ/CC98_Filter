{
  "manifest_version": 3,
  "name": "cc98过滤助手",
  "description": "指定ID屏蔽其主题帖与回复",
  "version": "1.0.0",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://www.cc98.org/*"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "CC98用户屏蔽管理"
  },
  "content_scripts": [
    {
      "matches": ["https://www.cc98.org/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/Gemini_Generated_Image_lcsypqlcsypqlcsy.png",
    "48": "icons/Gemini_Generated_Image_lcsypqlcsypqlcsy.png",
    "128": "icons/Gemini_Generated_Image_lcsypqlcsypqlcsy.png"
  }
}