{
  "manifest_version": 3,
  "name": "CC98_Filter",
  "description": "屏蔽拉黑助手，防不适内容突脸 | My CC98, My Own",
  "version": "0.3.0",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://www.cc98.org/*"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "CC98_Filter"
  },
  "content_scripts": [
    {
      "matches": ["https://www.cc98.org/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon0.png",
    "48": "icons/icon0.png",
    "128": "icons/icon0.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/icon.png"],
      "matches": ["https://www.cc98.org/*"]
    }
  ]
}